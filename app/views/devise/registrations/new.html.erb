<%= render "shared/header" %>

<h2 class="form_header_text">新規登録</h2>

<%= form_with model: @user, url: user_registration_path, class:"login_form", local: true do |f| %>
  <%= render "shared/error_messages", model: f.object, locals: {resource: @user} %>
  <div class="login_field">
    <%= f.label :nickname, "ニックネーム" %>
    <%= f.text_field :nickname, size:"20", maxlength: "20", autofocus: true, placeholder:"Nick"%>
  </div>
  <div class="login_field">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, size:"20", placeholder:"Email@com"%>
  </div>
  <div class="login_field">
    <%= f.label :password, "パスワード" %>
    <%= f.password_field :password, size:"20", placeholder:"Password"%>
  </div>
  <div class="login_field">
    <%= f.label :password_confirmation, "パスワード（確認）" %>
    <%= f.password_field :password_confirmation, size:"20", placeholder:"Password"%>
  </div>
  <div class="login_submit">
    <%= f.submit "登録", class:"login_submit_text" %>
  </div>
<% end %>

<%= link_to "ログイン画面へ", new_user_session_path, class: "login_link" %>
